program = "exec" cmpdstmt 

decllist = declaration | declaration ";" decllist

declaration = type1 " " IDENTIFIER | arraydecl

type1 = "number" | "string" | "var" 

nr_decl =  non-zero {digit} 

nr = "0" | non-zero {digit}

arraydecl = type1 " " "array" " " IDENTIFIER "[" nr_decl "]"

type  = type1 | arraydecl

cmpdstmt = "{" stmtlist "}"

stmtlist = stmt | stmt ";" stmtlist

stmt = simplstmt | structstmt

simplstmt = assignstmt | iostmt | declaration ";"

assignstmt = IDENTIFIER "=" expression

expression = expression ("+" | "-") term | term

term = term ("*" | "/") factor | factor

factor = "(" expression ")" | IDENTIFIER | integer | array_element

array_element = IDENTIFIER "[" nr "]"

iostmt = ("read" | "write" ) "(" IDENTIFIER ")"

structstmt = cmpdstmt | ifstmt | whilestmt | forstmt

ifstmt = "if" condition stmt ["else" stmt]

whilestmt = "while" condition  stmt

forstmt = "for" "( "assignstmt ";" condition ";" assignstmt" )"

condition = "(" expression RELATION expression ")"

RELATION = "<" | "<=" | "=" | "!=" | ">=" | ">" | "=="